@model IEnumerable<Nettit.Data.Entity.Chatroom>
@{
    ViewData["Title"] = "Your Chatrooms";
}

<main class="container">
    <article>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </article>

    <article class="chatrooms-container">
        <header>
            <h1>Your Chatrooms</h1>
            <p>Click a chatroom to join the conversation.</p>
        </header>

        @if (Model != null && Model.Any())
        {
            @foreach (var chatroom in Model)
            {
                        <a href="/n/@chatroom.Code" class="chatroom-card">
                            <article>
                                <h3>@chatroom.Title</h3>
                                <footer>
                                    <small>Invite Link: <code>/n/@chatroom.Code</code></small>
                                </footer>
                            </article>
                        </a>
            }
        }
        else
        {
                <div class="empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                    <h4>No Chatrooms Yet</h4>
                    <p>You haven't joined any chatrooms yet. Try visiting a <code>/n/{code}</code> link!</p>
                </div>
        }
    </article>
</main>

<style>
    .chatrooms-container header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .chatroom-card {
        display: block;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s, box-shadow 0.2s, border 0.2s;
        border: 8px solid transparent;
        border-radius: 8px;
    }

    .chatroom-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #00895A; /* Green outline on hover */

    }

    .chatroom-card article {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1rem;
    }

    footer {
        margin-top: auto;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
    }

    .empty-state svg {
        margin: 0 auto 1rem;
        display: block;
        opacity: 0.5;
    }

    code {
        font-size: 0.9em;
    }
</style>
